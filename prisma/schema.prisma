generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String?
  documents Document[]
}

model Document {
  id        String  @id @default(uuid())
  userId    String  // FK do usu√°rio do NextAuth
  user      User    @relation(fields: [userId], references: [id])
  filename  String
  filePath  String  
  ocrText   String?
  summary   String?
  createdAt DateTime @default(now())
}

